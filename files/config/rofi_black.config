/*  Colors  */
* {
    font:   "IBM Plex Mono 12";

    bg: #0f0f0f; 
    fg: #ececec; 
    br: #1c1c1c;

    normal: #909090;
    border: #3d3d3d;
    fade: #404040;

    background-color:   transparent;
    text-color:         @normal;

    margin:     0px;
    padding:    0px;
    spacing:    0px;
}

/* Config */
configuration {
    show-icons: true;
    cycle: false;
    auto-select: true;

    drun {
	display-name: "Desktop";
    }

    drun-display-format: "{name}";

    run {
	display-name: "Shell";
    }

    window {
	display-name: "Window";
    }

    timeout {
	delay: 15;
	action: "kb-cancel";
    }
}          

/* Main */
window {
    background-color:   @bg;
    border-color:       @border;

    padding:	8px;
    location:   center;
    width:      550px;
    border:     3px;
}

inputbar {
    padding:    8px 12px;
    spacing:    12px;
    children:   [ prompt, entry ];
}

prompt, entry, element-text, element-icon {
    vertical-align: 0.5;
}

entry {
    text-color: @fg;
    placeholder: "Type to search";
    placeholder-color: @fade;
}

prompt {
    text-color: @fg;
}

listview {
    lines:      8;
    columns:    1;
    scrollbar: true;

    fixed-height:   false;
}

scrollbar {
    background-color: @br;
    handle-color: @fg;
    margin: 0 0 0 8px;
}

element {
    padding:    8px;
    spacing:    8px;
}

element normal urgent {
    text-color: @fg;
}

element normal active {
    text-color: @fg;
}

element selected {
    text-color: @fg;
}

element selected normal {
    background-color:   @br;
}

element selected urgent {
    background-color:   @bg;
}

element selected active {
    background-color:   @br;
}

element-icon {
    size:   0.75em;
}

element-text {
    text-color: inherit;
}
